@model IEnumerable<Lost_And_Found.Models.Main>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    <div class="col-md-6">
        <form class="d-flex">
            <input name="searchString" class="form-control" type="search" placeholder="search" aria-label="Search" />
            <button class="btn btn-warning" type="submit">Search</button>
        </form>
    </div>
    <div class="col-md-6">
        <a asp-action="Index" class="text-black">Back</a>
    </div>
</div>
<br />
<br />
<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>
                Image
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Owner_Name)
            </th>
           @*  <th>
                @Html.DisplayNameFor(model => model.UserId)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.Item_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Additional_Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
                <td>
                    @if (!string.IsNullOrEmpty(item.ImagePath))
                    {
                        <img src="@Url.Content(item.ImagePath)" alt="Image" width="100" />
                    }
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Owner_Name)
            </td>
         @*    <td>
                @Html.DisplayFor(modelItem => item.UserId)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.Item_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Additional_Note)
            </td>
            <td>
                    <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" class="btn btn-warning" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                    <a asp-action="Finded" class="btn btn-success" asp-route-id="@item.Id">Finded</a>
            </td>
        </tr>
}
    </tbody>
</table>
